<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertia.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <!-- BASE_FOOTPRINT LINK-->
    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint"/>


    <!-- Ana Gövde -->
    <link name="base_link">
        <visual>
            <origin xyz="-0.1 0 0.1" rpy="0 0 0"/>
            <geometry>
                <box size="0.2 0.50 0.2"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <origin xyz="-0.1 0 0.1" rpy="0 0 0"/>
            <geometry>
                <box size="0.2 0.50 0.2"/>
            </geometry>
            <material name="black"/>
        </collision>
        <xacro:inertial_box mass="2.0" x="0.2" y="0.50" z="0.2">
            <origin xyz="-0.1 0 0.1" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- Tekerlekler -->
    <link name="fork_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
            <material name="orange"/>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.02" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <link name="fork_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.02"/>
            </geometry>
            <material name="orange"/>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.02" radius="0.03">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <link name="front_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.07" length="0.04"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.07" length="0.04"/>
            </geometry>
            <material name="orange"/>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.04" radius="0.07">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <!-- Direksyon Mekanizması -->

    <link name="steering_cylinder">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.2"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.01" length="0.2"/>
            </geometry>
            <material name="blue"/>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.2" radius="0.01">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>        

    <!-- Çatal Mekanizması -->
    <link name="left_fork">
        <visual>
            <origin xyz="0.575 0 0.025"/>
            <geometry>
                <box size="1.15 0.14 0.05"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.575 0 0.025"/>
            <geometry>
                <box size="1.15 0.14 0.05"/>
            </geometry>
            <material name="white"/>
        </collision>
        <xacro:inertial_box mass="5.0" x="1.14" y="0.14" z="0.05">
            <origin xyz="0.575 0 0.025" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <link name="right_fork">
        <visual>
            <origin xyz="0.575 0 0.025"/>
            <geometry>
                <box size="1.15 0.14 0.05"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.575 0 0.025"/>
            <geometry>
                <box size="1.15 0.14 0.05"/>
            </geometry>
            <material name="white"/>
        </collision>
        <xacro:inertial_box mass="5.0" x="1.14" y="0.14" z="0.05">
            <origin xyz="0.575 0 0.025" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>


    <!-- Bağlantılar -->
    <joint name="fork_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="fork_left_wheel"/>
        <origin xyz="-0.94 0.18 -0.05" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="fork_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="fork_right_wheel"/>
        <origin xyz="-0.94 -0.18 -0.05" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <joint name="front_wheel_joint" type="continuous">
        <parent link="steering_cylinder"/>
        <child link="front_wheel"/>
        <origin xyz="0.0 0.0 -0.1" rpy="0 -${3*pi/2} 0" /> <!--origin xyz="0.0 0.0 -0.1" rpy="0 ${3*pi/2} 0" /-->
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="steering_cylinder_joint" type="revolute">
        <parent link="base_link"/>
        <child link="steering_cylinder"/>
        <origin xyz="0.0 0.0 0.1" rpy="0 0 ${pi/2}" />
        <axis xyz="0 0 -1"/>
        <limit effort="10.0" velocity="1.0" lower="-0.872664626" upper="0.872664626"/>
    </joint>

    <joint name="left_fork_joint" type="fixed">
        <parent link="base_link"/>
        <child link="left_fork"/>
        <origin xyz="-1.15 0.18 -0.05"/>
    </joint>

    <joint name="right_fork_joint" type="fixed">
        <parent link="base_link"/>
        <child link="right_fork"/>
        <origin xyz="-1.15 -0.18 -0.05"/>
    </joint>

</robot>